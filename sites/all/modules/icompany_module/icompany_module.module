/**
 * Implements hook_block_info().
 */


function icompany_module_block_info() {
	
	$blocks['icompany_slider'] = array(
	'info' => t('iCompany Theme Slider'), //The name that will appear in the block list.
	'cache' => DRUPAL_CACHE_PER_ROLE, //Default
	);
	
